{
	"Macro Alert": {
		"prefix": [
			"ma",
			"malert",
		],
		"body": "<div class=\"macro-alert\" data-alert=\"${1:info}\">\n\t<div class=\"row\">\n\t\t<div class=\"col\">\n\t\t\t<p class=\"fwb\">${2:Information}</p>\n\t\t\t<p>\n\t\t\t\t$3\n\t\t\t</p>\n\t\t</div>\n\t</div>\n</div>",
		"description": "Display alert div for my articles"
	},
